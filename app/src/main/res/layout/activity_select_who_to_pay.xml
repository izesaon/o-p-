<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientrequest">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#80000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/pacifico"
            android:gravity="center"
            android:text="Send Payment"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="24dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/geosanslight"
            android:id="@+id/nameTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No."
            android:id="@+id/contactTitle"
            android:fontFamily="@font/geosanslight"
            android:paddingLeft="10dp"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Owed"
            android:fontFamily="@font/geosanslight"
            android:id="@+id/owedTitle"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            />

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/clickToPayTitle"-->
            <!--android:text="Click to Pay"-->
            <!--/>-->

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:fontFamily="@font/geosanslight"
        />


</LinearLayout>
